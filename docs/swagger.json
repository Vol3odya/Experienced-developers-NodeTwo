                    "example": "johndoe@gmail.com"
                  },
                  "password": {
                    "description": "User's password. The password must contain between 6 and 30 characters",
                    "type": "string",
                    "example": "Water1234",
                    "minLength": 6,
                    "maxLength": 30
                  }
                },
                "required": [
                  "email",
                  "password"
